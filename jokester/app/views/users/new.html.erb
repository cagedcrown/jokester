<h1>Sign up to be the next new Jokester!</h1>
<%= form_for @user do |u| %>
	<%= u.label :name %>:
	<%= u.text_field :name %><br />

	<%= u.label :email %>:
	<%= u.text_field :email %><br />

	<%= u.label :password %>:
	<%= u.text_field :password %><br/>

	<%= u.label :password_confirmation %>:
	<%= u.text_field :password_confirmation %>

	<%= u.submit %>
	<% end %>